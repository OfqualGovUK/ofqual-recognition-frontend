@using Ofqual.Recognition.Frontend.Web.ViewModels
@using Ofqual.Recognition.Frontend.Core.Constants
@model QuestionTwoViewModel

<link rel="stylesheet" href="~/css/progress_bar.css" asp-append-version="true">

@section BackLink {
    <a href="@(Model.BackUrl)" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="progress">
            <div class="progress__bar">
                <div class="bar__progress" style="width: 66.66%;"></div>
            </div>
            <span class="govuk-caption-l">Question 2 of 3</span>
            <br />
        </div>
        <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                Is your organisation based in the UK, Gibraltar or an EU or EFTA member state, or if not,
                does your organisation have a substantial presence in one of those territories?
            </legend>
            <div class="govuk-form-group @(ViewData.ModelState.IsValid ? "" : "govuk-form-group--error")">
                @if (ViewData.ModelState["Answer"]?.Errors?.Any() == true)
                {
                    <span class="govuk-error-message">
                        @ViewData.ModelState["Answer"]?.Errors.FirstOrDefault()?.ErrorMessage
                    </span>
                }
                <form method="post">
                    <div class="govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="yes" name="Answer" type="radio" value="Yes"
                                @(Model.Answer == "Yes" ? "checked" : "")>
                            <label class="govuk-label govuk-radios__label" for="yes">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="no" name="Answer" type="radio" value="No"
                                @(Model.Answer == "No" ? "checked" : "")>
                            <label class="govuk-label govuk-radios__label" for="no">
                                No
                            </label>
                        </div>
                    </div>
                    @Html.AntiForgeryToken()
                    <button type="submit" class="govuk-button govuk-!-margin-top-5">Continue</button>
                </form>
            </div>
        </fieldset>
    </div>
</div>