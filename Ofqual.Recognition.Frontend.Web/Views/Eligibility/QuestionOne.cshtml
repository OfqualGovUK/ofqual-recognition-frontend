@{
    ViewData["Title"] = "Apply to have your qualifications recognised";
    ViewData["HeaderTitle"] = "Apply to have your qualifications recognised";
}

<link rel="stylesheet" href="~/css/progress_bar.css" asp-append-version="true">

@section BackLink {
    <a href="javascript:window.history.back()" class="govuk-back-link">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="progress">
            <span class="govuk-caption-l">Question 1 of 3</span>
            <div class="progress__bar">
            <div class="bar__progress" style="width: 33.33%;"></div>
            @*
            <div class="progress__bar">
                <div class="bar__segment" style="width: 33.33%;"></div>
                <div class="bar__segment gap"></div>
                <div class="bar__segment"></div>
                <div class="bar__segment gap"></div>
                <div class="bar__segment"></div>
            </div>
            <div class="progress__labels">
                 @*
                <span class="progress__link progress__link--active govuk-caption-l">
                    <svg class="progress__icon" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2" fill="none" />
                        <path d="M8 2 A6 6 0 0 0 8 14 L8 8 Z" fill="currentColor" />
                    </svg>
                    Question 1
                </span>
                <span class="progress__link govuk-caption-l">
                    <svg class="progress__icon" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2" fill="none" />
                    </svg>
                    Question 2
                </span>
                <span class="progress__link govuk-caption-l">
                    <svg class="progress__icon" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2" fill="none" />
                    </svg>
                    Question 3
                </span>
                 *@
            </div>
        </div>
        <h1 class="govuk-heading-l">
            Qualifications we regulate
        </h1>
        <p class="govuk-body">
            A qualification must have a result that is given based on the learner demonstrating knowledge, skills and understanding - rather than issuing certificates which reflect attendance at a training event or course.
            <br /><br />
            We do not regulate courses that do not include an assessment of a learners attainment related to the specific knowledge, skills and behaviours.
        </p>
        <div class="govuk-form-group @(ViewData.ModelState.IsValid ? "" : "govuk-form-group--error")">
            <form method="post">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        <h2 class="govuk-fieldset__heading">
                            Do you award or intend to award qualifications?
                        </h2>
                    </legend>
                    @if (ViewData.ModelState["questionOne"]?.Errors?.Any() == true)
                    {
                        <span class="govuk-error-message">
                            @ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage
                        </span>
                    }
                    <div class="govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="yes" name="questionOne" type="radio" value="Yes" @(Model.QuestionOne == "Yes" ? "checked" : "")>
                            <label class="govuk-label govuk-radios__label" for="yes">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="no" name="questionOne" type="radio" value="No" @(Model.QuestionOne == "No" ? "checked" : "")>
                            <label class="govuk-label govuk-radios__label" for="no">
                                No
                            </label>
                        </div>
                    </div>
                </fieldset>
                <br />
                <button type="submit" class="govuk-button">Continue</button>
            </form>
        </div>
    </div>
</div>