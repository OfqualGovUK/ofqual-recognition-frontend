@using Ofqual.Recognition.Frontend.Web.ViewModels
@model QuestionThreeViewModel

@{
    ViewData["Title"] = "Apply to have your qualifications recognised";
    ViewData["HeaderTitle"] = "Apply to have your qualifications recognised";
}

<link rel="stylesheet" href="~/css/progress_bar.css" asp-append-version="true">

@section BackLink {
    <a href="question-two" class="govuk-back-link">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="progress">
            <div class="progress__bar">
                <div class="bar__progress" style="width: 100.00%;"></div>
            </div>
            <span class="govuk-caption-l">Question 3 of 3</span>
            <br />
        </div>

        <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                    Do you intend to make qualifications available to learners in England?
                </h1>
            </legend>
            <div class="govuk-form-group @(ViewData.ModelState.IsValid ? "" : "govuk-form-group--error")">
                <form method="post">
                    @if (ViewData.ModelState["Answer"]?.Errors?.Any() == true)
                    {
                        <span class="govuk-error-message">
                            @ViewData.ModelState["Answer"]?.Errors.FirstOrDefault()?.ErrorMessage
                        </span>
                    }

                    <div class="govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="yes" name="Answer" type="radio" value="Yes"
                                @(Model.Answer == "Yes" ? "checked" : "")>
                            <label class="govuk-label govuk-radios__label" for="yes">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="no" name="Answer" type="radio" value="No"
                                @(Model.Answer == "No" ? "checked" : "")>
                            <label class="govuk-label govuk-radios__label" for="no">
                                No
                            </label>
                        </div>
                    </div>
                    <br />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="govuk-button">Continue</button>
                </form>
            </div>
        </fieldset>

    </div>
</div>