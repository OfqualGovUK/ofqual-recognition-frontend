@using Ofqual.Recognition.Frontend.Web.ViewModels
@using Ofqual.Recognition.Frontend.Core.Helpers
@model ErrorViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">Sorry, there is a problem with the service</h1>
        <p class="govuk-body">
            Try again later.
        </p>

        <p class="govuk-body">
            @if (UrlHelper.IsEmail(Model.Url))
            {
                <span>
                    If you need to contact us by email,
                    <a class="govuk-link" href="@Model.Url">send @Model.ContactName an email</a>.
                </span>
            }
            else
            {
                <span>
                    If you need help,
                    <a class="govuk-link" href="@Model.Url">contact the @Model.ContactName</a>.
                </span>
            }
        </p>
    </div>
</div>